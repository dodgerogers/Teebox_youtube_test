
	<div class="main">
		<%= link_to "Ask a Question", new_question_path, class: "submit" %>
	</div>
	
<% @questions.each do |question| %>
	<h2><%= question.title %></h2><br>
		<%= question.body %><br>
		Asked by <%= question.user.name %>
		on <%= time_ago_in_words(question.created_at) %> ago
	<hr>
	<% end %>
	