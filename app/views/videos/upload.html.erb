<div class="well">
	Upload your video
	
<%= form_tag @upload_info[:url], :multipart => true do |f| %>
  <%= hidden_field_tag :token, @upload_info[:token] %>
	<%= hidden_field_tag :user_id, current_user.id %>
  <%= file_field_tag :file %><br><br>
  <%= submit_tag "Upload video", class: "btn btn-info" %>
<% end %>
</div>